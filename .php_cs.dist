<?php
namespace PhpCsFixer;

$finder = Finder::create()
  ->exclude('somedir')
  ->notPath('src/Symfony/Component/Translation/Tests/fixtures/resources.php')
  ->in(__DIR__)
;

return Config::create()
  ->setRiskyAllowed(true)
  ->setRules([
    '@PSR1' => true,
    '@PSR2' => true,
    '@Symfony' => true,
    '@Symfony:risky' => true,
    'array_syntax' => [
      'syntax' => 'short',
    ],
  ])
  ->setUsingCache(true)
  ->setCacheFile(__DIR__.'/.php_cs.cache')
  ->setFinder($finder)
;

